<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News List</title> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('includes/header') %>

    <div class="container mt-3">
        <h2 class="text-center mb-4">News List</h2>
        <a href="/admin/news/add" class="btn btn-success mb-3">Add New News</a>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>URL</th>
                            <th>Published At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% newsList.forEach((news, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= news.title %></td>
                            <td><%= news.description %></td>
                            <td><a href="<%= news.url %>" target="_blank"><%= news.url %></a></td>
                            <td><%= new Date(news.publishedAt).toLocaleString() %></td>
                            <td>
                                <a href="/admin/news/edit/<%= news._id %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/admin/news/delete/<%= news._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this news?')">Delete</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
